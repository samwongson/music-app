<h1>Post a song</h1>
<hr/>


<% if @song && @song.errors.any? %>
  <div>
    <strong>Some issues with your song, please fix them:</strong>
    <ul>
      <% @song.errors.full_messages.each do |song| %>
        <li><%= song %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/songs">
  <div class="input-group">
    <label>Title:</label>
    <input class="form-control" type="text" name="title" value="<%= @song.title %>">
  </div>

  <div class="input-group">
    <label>Artist:</label>
    <input class="form-control" type="text" name="artist" value="<%= @song.artist %>">
  </div>
  

  <div class="input-group">
    <label>URL:</label>
    <input class="form-control" type="text" name="url" value="<%= @song.url %>">
  </div>

  <div>
    <input class="btn btn-success" type="submit" value="Submit" >
  </div>
</form>